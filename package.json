{
  "name": "proyecto-certificaciones",
  "version": "0.0.0",
  "main": "electron/main.js",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "electron:start": "cross-env ELECTRON_START_URL=http://localhost:4200 electron .",
    "electron:dev": "concurrently -k \"ng serve\" \"npm:electron:start\"",
    "electron:build": "npm run build && electron-builder -c electron-builder.yml",
    "cap:build": "npm run build && npx cap copy",
    "cap:sync": "npm run build && npx cap sync",
    "cap:open:android": "npm run cap:sync && npx cap open android",
    "cap:open:ios": "npm run cap:sync && npx cap open ios",
    "android:emu": "ng build --configuration android-emulator && npx cap copy android && npx cap open android",
    "android:lan": "ng build --configuration android-lan && npx cap copy android && npx cap open android"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^20.3.0",
    "@angular/compiler": "^20.3.0",
    "@angular/core": "^20.3.0",
    "@angular/forms": "^20.3.0",
    "@angular/platform-browser": "^20.3.0",
    "@angular/router": "^20.3.0",
    "@capacitor-community/http": "^1.4.1",
    "@popperjs/core": "^2.11.8",
    "@zxing/browser": "^0.1.5",
    "bootstrap": "^5.3.8",
    "bootstrap-icons": "^1.13.1",
    "rxjs": "~7.8.0",
    "sweetalert2": "^11.23.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular/build": "^20.3.2",
    "@angular/cli": "^20.3.2",
    "@angular/compiler-cli": "^20.3.0",
    "@capacitor/android": "^7.4.3",
    "@capacitor/cli": "^7.4.3",
    "@capacitor/core": "^7.4.3",
    "@capacitor/ios": "^7.4.3",
    "@types/jasmine": "~5.1.0",
    "concurrently": "^9.1.0",
    "cross-env": "^7.0.3",
    "electron": "^31.3.1",
    "electron-builder": "^25.1.8",
    "jasmine-core": "~5.9.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "typescript": "~5.9.2"
  }
}
